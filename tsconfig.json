{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": ["es5", "es6", "esnext"],
    "outDir": ".build",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
